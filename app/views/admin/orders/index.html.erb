<div class="container">
    <big class="silver">注文履歴一覧</big>
    <table class="table">
        <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id)%></td>
        <td><%= "#{order.customer.last_name}"+ "#{order.customer.first_name}"%></td>
        <td><%= order.amount_all %></td>
        <td><%= order.status %></td>
        </tr>
        <% end %>
    </table>
</div>