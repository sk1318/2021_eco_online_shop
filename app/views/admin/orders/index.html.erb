<div class="card my-3">
  <h5 class="card-header">注文履歴一覧</h5>
  <div class="card-body">
    <table class="table">
        <tr class="table-info">
            <th>注文番号</th>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
        <td><%= order.id %></td>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id)%></td>
        <td><%= "#{order.customer.last_name}"+ "#{order.customer.first_name}"%></td>
        <td><%= order.amount_all %></td>
        <td><%= order.status %></td>
        </tr>
        <% end %>
    </table>
 </div>
</div>
