<div class="card border-warning my-3">
  <h5 class="card-header bg-warning"><%= @customer.all_name%>さんの会員情報編集</h5>
  <div class="card-body">    
    <% if @customer.errors.any? %>
    <ul class="error">
     <% @customer.errors.full_messages.each do |error| %>
     <li class="error"><%= error %></li>
     <% end %>
    </ul>
    <% end %>
    <%= form_with model: @customer,url: admin_customer_path(@customer),local: true do |f| %>
　  <div class="row">
　    <div class="col-md-3">
　      <spna>名前</span>
　    </div>
　    <div class="col-md-3">
          <span>姓</span>
          <%= f.text_field :last_name, autofocus: true,class: "form-control"  %>
　    </div>
　    <div class="col-md-3">
        <span>名</span>
        <%= f.text_field :first_name, autofocus: true,class: "form-control" %>
　    </div>
　  </div>
　  
　  <div class="row">
　    <div class="col-md-3">
　      <spna>フリガナ</span>
　    </div>
　    <div class="col-md-3">
          <%= f.label "セイ" %>
     　　　　<%= f.text_field :last_name_kana, autofocus: true,class: "form-control"  %>
　    </div>
　    <div class="col-md-3">
          <%= f.label "メイ" %>
          <%= f.text_field :first_name_kana,autofocus: true,class: "form-control" %>
　    </div>
　   </div>
　    <div class="row">
　    <div class="col-md-3">
　      <spna>メールアドレス</span>
　    </div>
　    <div class="col-md-6">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control"  %>
　    </div>
　   </div>
　   <div class="row">
　    <div class="col-md-3">
　      <spna>郵便番号(ハイフンなし)</span>
　    </div>
　    <div class="col-md-3">
    <%= f.text_field :zip_code, autofocus: true,class: "form-control"  %>
　    </div>
　   </div>
   　<div class="row">
　    <div class="col-md-3">
　      <spna>住所</span>
　    </div>
　    <div class="col-md-6">
     　<%= f.text_field :address, autofocus: true ,class: "form-control" %>
　    </div>
　   </div>
　    <div class="row">
　    <div class="col-md-3">
　      <spna>電話番号(ハイフンなし)</span>
　    </div>
　    <div class="col-md-3">
      <%= f.text_field :telephone_number, autofocus: true ,class: "form-control" %>
　    </div>
　   </div>　
　    <div class="row">
　    <div class="col-md-3">
　      <spna>会員ステータス</span>
　    </div>
　    <div class="col-md-3">
      <%= f.radio_button :is_deleted,false %>有効
　    </div>
　     <div class="col-md-3">
      <%= f.radio_button :is_deleted,true%>退会
　    </div>
　   </div>
　   <div class="row">
　     <div class="col-md-6 mx-auto">
       <%= f.submit "保存",class: "btn btn-warning btn-block" %>
　     </div>
　   </div>
    <% end %>
 </div>
</div>