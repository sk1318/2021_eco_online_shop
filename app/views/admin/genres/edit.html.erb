<big class="silver">ジャンル一覧・追加</big>
    <div class="row my-3">
        <div class="col-md-3">
          <p>ジャンル名</p>
        </div>
        <div class="col">
        <%= form_with model: @genre,url: "/admin/genres/#{params[:id]}",local: true do |f| %>
            <div class="col-md-4">
             <%= f.text_field :name,placeholder: "ジャンル名",class: "form-control" %>
            </div>
            <div class="col-md-4">
            <%= f.submit "保存",class: "btn btn-success btn-block mx-auto my-3" %>
            </div>
        
        <% end %>
        </div>
    </div>