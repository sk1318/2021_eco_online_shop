 <div class="card my-3">
  <h5 class="card-header">ジャンル一覧・追加</h5>
  <div class="card-body">
    <div class="row my-3">
        <div class="col-md-3 text-center">
          <p>ジャンル名</p>
        </div>
        <div class="col">
        <%= form_with model: @genre,url: "/admin/genres",local: true do |f| %>
            <div class="col-md-6">
             <%= f.text_field :name,placeholder: "ジャンル名",class: "form-control" %>
            </div>
            <div class="col-md-3">
            <%= f.submit "新規登録",class: "btn btn-success btn-block my-3 mx-auto" %>
            </div>
        <% end %>
        </div>
    </div>
    <div class="col-md-5">

    <table class="table">
        <tr>
            <td>ジャンル</td>
            <td></td>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する",edit_admin_genre_path(genre),class: "btn btn-success" %></td>
        </tr>

        <% end %>
    </div>
    </table>
  </div>
</div>