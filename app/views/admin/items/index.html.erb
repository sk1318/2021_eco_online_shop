<div class="card border my-3">
  <h5 class="card-header">商品一覧</h5>
  <div class="card-body">
    <div class="my-3">
    <%= link_to new_admin_item_path do %>
    <button type="button" class=" btn btn-secondary rounded-circle p-2">＋</button>
    <% end %>

    </div>
    <table class="table">
        <tr class="table-info">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
        </tr>
        <% @items.each do |item| %>
        <tr>
            <td><%= item.id %></td>
            <td><%=link_to item.name,admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <% if item.is_active == true %>
            <td class="green">販売中</td>
            <% else %>
            <td>販売停止中</td>
            <% end %>
        </tr>
        <% end %>
    </table>
 </div>
</div>
