<div class="card my-3">
  <h5 class="card-header">商品詳細</h5>
  <div class="card-body">      
      <div class="row my-3">
          <div class="col-md-2">
          <%= image_tag @item.image.variant(resize:'200x100') if @item.image.attached? %>
          </div>
          <div class="col-md-10">
          <table class="table">
              <tr>
                  <td>商品名</td>
                  <td><%= @item.name %></td>
              </tr>
               <tr>
                  <td>商品説明</td>
                  <td><%= @item.introduction %></td>
              </tr>
               <tr>
                  <td>ジャンル</td>
                  <td><%= @item.genre.name %></td>
              </tr>
               <tr>
                  <td>税込価格(税抜価格)</td>
                  <td><%= (@item.price*1.1).floor%>（<%= @item.price %>）円</td>
              </tr>
              <tr>
                  <td>販売ステータス</td>
                  <% if @item.is_active == true %>
                  <td class="green">販売中</td>
                  <% else %>
                  <td>販売停止中</td>
                  <% end %>
              </tr>
              <tr>
                 <td>  
                 <%= link_to "編集する",edit_admin_item_path(@item),class: "btn btn-success btn-block" %>
                 </td> 
                 <td>
                 <%= link_to "削除する",admin_item_path(@item),class: "btn btn-danger btn-block" ,method: :delete,"data-confirm" => "本当に削除しますか？" %>   
                 </td>
              </tr>
          </table>
           </div>
      </div>
  </div>
</div>