<div class="container">
    <big class="silver">商品詳細</big>
    <div class="row my-3">
        <div class="col-2">
            <%= attachment_image_tag @item, :image, format: 'jpeg',size: "100x100" %>
        </div>
        <div class="col-10">
        <table class="table">
            <tr>
                <td>商品名</td>
                <td><%= @item.name %></td>
            </tr>
             <tr>
                <td>商品説明</td>
                <td><%= @item.introduction %></td>
            </tr>
             <tr>
                <td>ジャンル</td>
                <td><%= @item.genre.name %></td>
            </tr>
             <tr>
                <td>税込価格(税抜価格)</td>
                <td><%= @item.price*1.1%>（<%= @item.price %>）円</td>
            </tr>
            <tr>
                <td>販売ステータス</td>
                <% if @item.is_active == true %>
                <td class="green">販売中</td>
                <% else %>
                <td>販売停止中</td>
                <% end %>
            </tr>
        </table>
        <%= link_to "編集する","",class: "btn btn-success bnt-block" %>
        </div>
    </div>
</div>