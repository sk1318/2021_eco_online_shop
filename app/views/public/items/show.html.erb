<div class="container">
    <div class="row my-3">
        <div class="col-3 offset-3">
            <%= attachment_image_tag @item, :image, format: 'jpeg',size: "200x100" %>
        </div>
        <div class="col-3">
            <%= @item.name %><br>
            <%= @item.introduction %><br>
            ￥<%= (@item.price*1.1).floor %>(税込み)<br>
            <%= form_with model: @cart_item ,url: cart_items_path,local: true do |f| %>
            <%= f.select :amount, options_for_select((1..10).to_a), include_blank: "個数選択" %>
            <%= f.text_field :item_id,value: @item.id,type: "hidden" %>
            <%= f.submit "カートに入れる",class: "btn btn-success btn-block" %>
            <% end %>
        </div>
    </div>
</div>