<div class="container">
    <big class="silver">商品一覧</big>(全<%= @items.count %>件)
    <div class="row">
       <% @items.each do |item| %>
       <div class="col-3 my-3">
       <%= attachment_image_tag item, :image, format: 'jpeg',size: "200x100" %><br>
       <%= item.name %><br>
       ￥<%= item.price.floor*1.1 %>
       </div>
       <% end %>
    </div>
</div>