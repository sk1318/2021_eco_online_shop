    <big class="silver">会員情報編集</big>
    <ul>
        <% if @customer.errors.any? %>
        <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        <% end %>
    </ul>
<%= form_with model: @customer,url: customers_path,local: true  do |f| %>

　  <div class="row">
　    <div class="col-md-3">
　      <spna>氏名</span>
　    </div>
　    <div class="col-md-3">
　        <span>姓</span>
          <%= f.text_field :last_name, autofocus: true,class: "form-control"  %>
　    </div>
　    <div class="col-md-3">
　        <span>名</span>
        <%= f.text_field :first_name, autofocus: true,class: "form-control" %>
　    </div>
　  </div>

　  <div class="row">
　    <div class="col-md-3">
　      <spna>フリガナ</span>
　    </div>
　    <div class="col-md-3">
          <span>セイ</span>
           <%= f.text_field :last_name_kana,autofocus: true,class: "form-control" %>
　    </div>
　    <div class="col-md-3">
          <span>メイ</span>
          <%= f.text_field :first_name_kana,autofocus: true,class: "form-control" %>
　    </div>
　   </div>

　   <div class="row">
　    <div class="col-md-3">
　      <spna>郵便番号</span>
　    </div>
　    <div class="col-md-3">
    <%= f.text_field :zip_code, autofocus: true,class: "form-control"  %>
　    </div>
　   </div>
   　<div class="row">
　    <div class="col-md-3">
　      <spna>住所</span>
　    </div>
　    <div class="col-md-6">
     　<%= f.text_field :address, autofocus: true ,class: "form-control" %>
　    </div>
　   </div>

　    <div class="row">
　    <div class="col-md-3">
　      <spna>電話番号</span>
　    </div>
　    <div class="col-md-6">
      <%= f.text_field :telephone_number, autofocus: true ,class: "form-control" %>
　    </div>
　   </div>

     <div class="row">
　    <div class="col-md-3">
　      <spna>メールアドレス</span>
　    </div>
　    <div class="col-md-6">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control"  %>
　    </div>
　   </div>

　   <div class="row">
　     <div class="col-md-6  mx-auto">
       <%= f.submit "編集内容を保存",class: "btn btn-success btn-block" %>
　     </div>
　　 </div>
　　  <div class="row">
　     <div class="col-md-6  mx-auto">
       <%= link_to "退会する",cancellation_path,class: "btn btn-danger btn-block" %>
　     </div>
　　 </div>
<% end %>