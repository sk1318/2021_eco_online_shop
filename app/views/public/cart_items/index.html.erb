<div class="container">
    <big class="silver">ショッピングカート</big>
    <table claas="table table-bordered my-3">
        <thead>
        <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th> 
            <th>小計</th>
            <th></th>
        </tr>
        </thead>
        <% sum = 0 %>
        <% @cart_items.each do  |cart_item| %>
        <tdody>
        <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= (cart_item.item.price*1.1).floor %></td>
            <td>
            <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch ,local: true do |f| %>
            <%= f.select :amount, [[1, 1], [2, 2],  [3, 3], [4, 4]] %>
            <%= f.submit "変更", class: "btn btn-info" %>
            <% end %>
            </td>
            <td><%= cart_item.subtotal %></td>
            <td><%= link_to "削除する","",class: "btn btn-danger" %></td>
        </tr>
        </tdody>
        <% sum += cart_item.subtotal %>
        <% end %>
    </table>
    <div claas="row">
        <div claas="col-3">
         <%= link_to "買い物をつづける",items_path,class: "btn btn-primary" %>
        </div>
        <div claas="col-4">
            <table claas="table">
                <tr>
                    <th>合計金額</th>
                    <td>
                   <%= sum %>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>