<div class="container">
    <big class="silver">注文履歴詳細</big>
    <div class="row">
        <div class="col-5">
           <span>注文情報</span> 
        <table class="table table-bordered">
            <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
            </tr>
            <tr>
            <th>配送先</th>
            <td><%= @order.address_all %></td>
        　　</tr>
        　　<tr>
    　　    <th>支払い方法</th>
    　　    <td><%= @order.peyment_method %></td>
        　　</tr>
        　　<tr>
    　　    <th>ステータス</th>
    　　    <td>
    　　    <%= @order.status %>
    　　    </td>
    　　    </tr>
        </table> 
        </div>
        <div class="col-5">
          <span>請求情報</span> 
        <table class="table table-bordered">
        <tr>
        <th>商品合計</th>
        <td><%= @order.total_merchandise %></td>
        </tr>
        <tr>
        <th>配送料</th>
        <td><%= @order.delivery_charge %></td>
    　　</tr>
    　　<tr>
　　    <th>ご請求額</th>
　　    <td><%= @order.total_merchandise + @order.delivery_charge  %></td>
    　　</tr>
    </table>
        </div>
    </div> 
    <div class="row">
        <span>注文内容</span>
        <table class ="table table-bordered">
        <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
        </tr>
        <% @order.order_details.each do |order_detail| %>
        <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price%></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.price*order_detail.amount %> </td>
        </tr>
        <% end %>
    </table>
    </div>
</div>