    <big class="silver">注文履歴一覧</big>
        
    <table class="table table-bordered">
        <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
            <td><%= order.address_all %></td>
            <td>
            <% order.order_details.each do |order_detail|  %>
            <%= order_detail.item.name %><br>
            <% end %>
            </td>
            <td>
               <%= order.amount_biled + order.delivery_charge %> 
            </td>
            <td>
                <%= order.status %>
            </td>
            <td>
                <%=link_to "表示する", order_path(order),class: "btn btn-block btn-primary" %>
            </td>
        </tr>
        <% end %>
    </table>