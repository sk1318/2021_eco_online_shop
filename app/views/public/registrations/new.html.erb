  <big class="silver px-3">新規会員登録</big><br><br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

　  <div class="row">
　    <div class="col-lg-3">
　      <spna>名前</span>
　    </div>
　    <div class="col-lg-3">
          <span>姓</span>
          <%= f.text_field :last_name, autofocus: true,class: "form-control"  %>
　    </div>
　    <div class="col-lg-3">
        <span>名</span>
        <%= f.text_field :first_name, autofocus: true,class: "form-control" %>
　    </div>
　  </div>
　  
　  <div class="row">
　    <div class="col-lg-3">
　      <spna>フリガナ</span>
　    </div>
　    <div class="col-lg-3">
          <%= f.label "セイ" %>
     　　　　<%= f.text_field :last_name_kana, autofocus: true,class: "form-control"  %>
　    </div>
　    <div class="col-lg-3">
          <%= f.label "メイ" %>
          <%= f.text_field :first_name_kana,autofocus: true,class: "form-control" %>
　    </div>
　   </div>
　    <div class="row">
　    <div class="col-lg-3">
　      <spna>メールアドレス</span>
　    </div>
　    <div class="col-lg-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control"  %>
　    </div>
　   </div>
　   <div class="row">
　    <div class="col-lg-3">
　      <spna>郵便番号(ハイフンなし)</span>
　    </div>
　    <div class="col-lg-3">
    <%= f.text_field :zip_code, autofocus: true,class: "form-control"  %>
　    </div>
　   </div>
   　<div class="row">
　    <div class="col-lg-3">
　      <spna>住所</span>
　    </div>
　    <div class="col-lg-6">
     　<%= f.text_field :address, autofocus: true ,class: "form-control" %>
　    </div>
　   </div>
　    <div class="row">
　    <div class="col-lg-3">
　      <spna>電話番号(ハイフンなし)</span>
　    </div>
　    <div class="col-lg-3">
      <%= f.text_field :telephone_number, autofocus: true ,class: "form-control" %>
　    </div>
　   </div>　
      <div class="row">
　    <div class="col-lg-3">
　      <spna>パスワード(6文字以上)</span>
　    </div>
　    <div class="col-lg-3">
      <%= f.password_field :password, autocomplete: "new-password",class: "form-control" %>
　    </div>
　   </div>　
　    <div class="row">
　    <div class="col-lg-3">
　      <spna>パスワード確認用</span>
　    </div>
　    <div class="col-lg-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %>
　    </div>
　   </div>
　   <div class="row">
　     <div class="col-md-6  mx-auto">
       <%= f.submit "新規登録",class: "btn btn-success btn-block" %>
　     </div>
　   </div>
<% end %>

<big class="silver px-3">既に登録済みの方</big><br><br>
<%= render "public/shared/links" %><span>からログインしてください。</span>