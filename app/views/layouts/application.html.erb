<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
 <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light">
            <% if customer_signed_in? %>
            <a class="navbar-brand p-3" href="/">Customerトップページ</a>
            <% elsif admin_signed_in? %>
            <a class="navbar-brand p-3" href="/admin">管理者トップページ</a>
            <% else %>
           <a class="navbar-brand p-3" href="/">Customerトップページ</a>
            <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>
             <li class="nav-item">
              <a class="nav-link text-dark"href="/customers/mypage">マイページ</a>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧",items_path,class: 'nav-link text-dark'%>
            </li>
            <li class="nav-item">
              <%= link_to "カート",cart_items_path,class: 'nav-link text-dark'%>
            </li>
           <li class="nav-item">
              <%= link_to "ログアウト",destroy_customer_session_path ,class: 'nav-link text-dark',method: :delete %>
            </li>
            
             <% elsif admin_signed_in? %>
             <li class="nav-item">
            <%= link_to "商品一覧",admin_items_path ,class:"nav-link text-dark"%>
            </li>            
            <li class="nav-item">
            <%= link_to "会員一覧",admin_customers_path ,class:"nav-link text-dark"%>
            </li>
            <li class="nav-item">
            <%= link_to "注文履歴一覧",admin_orders_path,class: "nav-link text-dark" %>
            </li>
            <li class="nav-item">
            <%= link_to "ジャンル一覧",admin_genres_path ,class:"nav-link text-dark"%>
            </li>           <li class="nav-item">
              <%= link_to "ログアウト",destroy_admin_session_path ,class: 'nav-link text-dark',method: :delete %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to "About",about_path,class: 'nav-link text-dark'%>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧",items_path,class: 'nav-link text-dark'%>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録",new_customer_registration_path ,class: 'nav-link text-dark'%>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン",new_customer_session_path ,class: 'nav-link text-dark'%>
            </li>
          <% end %>
            </ul>
          </div>
      </nav>
      <% if admin_signed_in? %>
      <div class="row">
        <div class="ml-auto mx-3 my-2">
          <%= form_with url: admin_items_path , method: :get, local: true do |f| %>
          <%= f.text_field :search, placeholder: "商品名を検索" %>
          <%= f.button type: "submit" do %>
          <i class="fas fa-search-plus"></i>
        　<% end %>
          <% end %>
      </div>
      </div>
      <% end %>
      </div>
    </header>
    <main class="mb-auto">
    <div class="container">
      <% flash.each do |type,message| %>
    <p class="<%= type %>"><%= message %></p>
    <% end %>
    <%= yield %>
    </div>
    </main>
    <footer class="bg-dark text-white pt-5 pb-4">
    </footer>
  </body>
</html>
